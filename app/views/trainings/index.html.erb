<h1>Training</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>本文</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @trainings.each do |training| %>
        <td><%= training.title %></td>
        <td><%= training.body %></td>
        <td><%= link_to 'show', training_path(training.id) %></td>
        <td><%= link_to 'edit', edit_training_path(training.id) %></td>
        <td><%= link_to "delete", training_path(training), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>


<h1>新規投稿</h1>

<%= form_with model:@training, local:true do |f| %>

  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>

<% end %>